@model IEnumerable<VinylDatabaseApi.Models.Vinyl>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfLps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfTracks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Artist)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfLps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfTracks)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleaseDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageLink)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.VinylId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.VinylId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.VinylId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
